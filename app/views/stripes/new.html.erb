<h2>Create New Stripe</h2>
<%= render "templates" %>

<%= nested_form_for @stripe do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, :class => "input-xlarge" %>

  <p class="controls">
    <%= link_to "Add Text", "", :id => "add-new-text-item", :class => "btn" %>
    <%= link_to "Add Image", "", :id => "add-new-image-item", :class => "btn" %>
    <%= link_to "Add Embed", "", :id => "add-new-embed-item", :class => "btn" %>
  </p>

  <div class="stripe-items">
  </div>

  <p>
    <%= f.submit "Create Stripe", :class => "btn submit btn-primary" %>
  </p>
<% end %>

